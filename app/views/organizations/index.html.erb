<h1>Adnat</h1>
<%= render "user" %>
<h3>Organizations</h3>
<p>You aren't a member of any organizations.<br>
   Join an existing one or create a new one.</p>
<ul>
    <% @organizations.each do |organization| %>
        <li><%= organization.name %>
            <%= link_to 'Edit', edit_organization_path(organization) %>
            <%= link_to 'Join', organization_path(organization) %></li>
    <% end %>
</ul>
<h3>Create Organization</h3>
<%= form_with scope: :organization, url: organizations_path, local: true do |form| %>
    <p>
        <%= form.label :name %>:
        <%= form.text_field :name %>
    </p>

    <p>
        <%= form.label :hourly_rate %>:
        $<%= form.text_field :hourly_rate %>
    </p>
    
    <p>
        <%= form.submit "Create and Join" %>
    </p>
<% end %>