<h1>Adnat</h1>
<h3>Log in</h3>
<%= form_with scope: :user, url: users_login_path, local: true do |form| %>
    <% if @user.errors.any? %>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>
    <p>
        <%= form.label :email %><br>
        <%= form.text_field :email_address %>
    </p>

    <p>
        <%= form.label :password %><br>
        <%= form.password_field :password %>
    </p>

    <p>
        <%= form.check_box :remember_me %><%= form.label "Remember me" %>
    </p>
    
    <p>
        <%= form.submit "Log in" %>
    </p>
<% end %>
<%= link_to 'Sign up', new_user_path %><br>
<%= link_to 'Forgot your password?', users_password_path %>